<div class="col-lg-8 col-lg-offset-2">
  <h4>Better job, better life</h4>
  <hr>
  <div class="pull-right">
    <%= link_to("Add a Job", new_admin_job_path, class: "btn btn-primary btn-sm") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Lower Salary</td>
        <td>Upper Salary</td>
        <td>Publish Time</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, admin_job_path(job)) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.created_at %></td>
          <td>
            <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-primary btn-xs") %>
            <%= link_to("Destroy", admin_job_path(job), class: "btn btn-primary btn-xs", method: :delete, data: { confirm: "Are your sure?" }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
