<div class="col-lg-8 col-lg-offset-2">
  <h4>Better job, better life</h4>
  <hr>
  <div class="dropdown pull-right">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Filter
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to("Upper Salary", jobs_path(:order => "by_upper_bound")) %></li>
      <li><%= link_to("Lower Salary", jobs_path(:order => "by_lower_bound")) %></li>
      <li><%= link_to("Publish Time", jobs_path(:order => "by_created_at")) %></li>
    </ul>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Title</td>
        <td>Lower Salary</td>
        <td>Upper Salary</td>
        <td>Publish Time</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to(job.title, job_path(job)) %></td>
          <td><%= job.wage_lower_bound %></td>
          <td><%= job.wage_upper_bound %></td>
          <td><%= job.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
